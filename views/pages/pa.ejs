            <div class="col-3">
            <button class="btn btn-secondary btn-lg w-100 num-clear">Clear</button>
            </div>
        </div>
        <div class="row mt-2">
            <div class="col-3">
            <button class="btn btn-secondary btn-lg w-100 num-btn">4</button>
            </div>
            <div class="col-3">
            <button class="btn btn-secondary btn-lg w-100 num-btn">5</button>
            </div>
            <div class="col-3">
            <button class="btn btn-secondary btn-lg w-100 num-btn">6</button>
