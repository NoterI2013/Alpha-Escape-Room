<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../partials/head'); %>
</head>
<body class="container">

<header>
  <%- include('../partials/header'); %>
</header>

<main>
  <div class="jumbotron">
    <h1>Hello World</h1>
    <p>Welcome to templating using EJS</p>

    <h2>Spirit</h2>
    <p><%= tagline %></p>

    <ul>
      <% mascots.forEach(function(mascot) { %>
        <li>
          <strong><%= mascot.name %></strong>
          representing <%= mascot.organization %>,
          born <%= mascot.birth_year %>
        </li>
      <% }); %>
    </ul>

    <h2>MongoDB</h2>
    <p><a href="https://www.mongodb.com/docs/drivers/node/current/fundamentals/aggregation/">This is the link to MongoDB</a></p>

    <!-- <h2>Redirect</h2>
    <p><a href="./public/all.png">all.png</a></p> -->
  </div>
</main>

<footer>
  <%- include('../partials/footer'); %>
</footer>

</body>
</html>